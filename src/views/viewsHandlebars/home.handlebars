<div class="container d-flex text-center justify-center flex-column">

    <h1>App WebSocket</h1>

<div >


    <form role="form" action="./productos" method="post" class="d-flex flex-column  text-center justify-center">
        <label for="name">Nombre</label>
        <input  type="text" id="name" name="name">
        <label for="price">Precio</label>
        <input  type="text" id="price" name="price">
        <label for="image">URL Imagen</label>
        <input  type="text" id="image" name="image">
        <button type="submit" class="mt-3 btn btn-primary">ENVIAR</button>
    </form>
</div>
<br>
<hr>
<br>

        <div >
            <h2 id="alerta" >No hay productos</h2>
        </div>
        <div id="showProducts" class="d-flex flex-column  text-center justify-center">
            <table style="margin-top: 10px;" id="tabla">
                <tr>
                    <th style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3">Nombre</th>
                    <th style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3">Precio</th>
                    <th style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3">Stock</th>
                </tr>
            </table>
        </div>
    <br>
    <br>
    <hr>

     <form id="messageForm" class="d-flex flex-column  text-center justify-center">
        <input id="usernameInput" type="email" placeholder="Nombre de usuario">
        <input id="messageInput" type="text" placeholder="Mensaje" class="mt-1">
        <input id="btn-Chat" value="Enviar" type="submit" class="mt-3 btn btn-primary">
    </form>

    <ul id="messagePool">

    </ul>

</div>

<script>
    var productos2 = {{{productos}}}
    console.log(productos2.productos.length)

    document.getElementById("alerta").style.display = 'none';

    if(productos2.productos.length < 1)
        {
            document.getElementById("alerta").style.display = 'block';
            document.getElementById("showProducts").style.display = 'none';
        }
    else{
            document.getElementById("alerta").style.display = 'none';
            document.getElementById("showProducts").style.display = 'block';
            
            productos2.productos.forEach(element => {
                let td = document.createElement("tr");
                let t1 = document.createElement("th");
                t1.innerText = element.name;
                let t2 = document.createElement("th");
                t2.innerText = element.price;
                let t3 = document.createElement("th");

                let imagen = document.createElement("img");
                imagen.src = element.image;
                t3.innerHTML = imagen.outerHTML;

                t1.style.border = "1px solid"
                t2.style.border = "1px solid"
                t3.style.border = "1px solid"

                td.append(t1);
                td.append(t2);
                td.append(t3);

                document.getElementById("tabla").append(td);
            }
            )
    }
</script>

    


