html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Mi plantilla PUG
    body 
        h1="Plantilla PUG"
        a(href="/" )="Volver a la pagina Principal" 
            br
            br
            if productos.length < 1
                h3="No hay Productos"
            else
                table
                    th(style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3")="Nombre"
                    th(style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3")="Precio"
                    th(style="padding: 5px; border: 3px solid #dddddd; background-color: #61b4e1a3")="Image"
                        each val in productos 
                            tr(style="border: 1px solid #dddddd;")  
                                th(style="border: 1px solid #dddddd;")=val.name
                                th(style="border: 1px solid #dddddd;")=val.price
                                th(style="border: 1px solid #dddddd;")
                                    img(src=val.image)
            